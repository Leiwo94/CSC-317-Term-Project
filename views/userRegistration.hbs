        <div class="registrationContainer">
            <div id="thing" class="registrationFormContainer">

                <div id="registrationHeaderContainer" class="registrationHeaderContainer">
                    <header class="registrationHeaderText">
                        <h3>New User Registration</h3>
                    </header>
                </div>
                <form id="userRegForm" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
                    <div class="registrationInfoContainer" id="registration">

                        <div class="registrationPromptContainer">
                            <p class="registrationPromptText">Please Enter Registration Information</p>
                        </div>
                        <div class="registrationFieldset">
                            <fieldset class="registrationFieldset">
                                <!-- <legend>User Information</legend> -->
                                {{!-- <label for="fname">First Name</label>
                                
                                <input id="regFirstName" class="infoInput" type="text" name="First Name" required
